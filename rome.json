{
  "files": {
    "ignore": ["dist", "proto", "coverage", "pnpm-lock.yaml", "tsconfig.json", "tsconfig.*.json"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "style": {
        "useBlockStatements": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "all": true
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
